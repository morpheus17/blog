
<div class="row">
    <div class="col-lg-6 mx-auto">
                    
        <blockquote class="blockquote blockquote-custom bg-white p-5 shadow rounded">
        <h2>Edit blog post </h2>
        <%= form_with url: update_article_path do |f| %>
            <% @articles.each do |article| %>
                <% if @id==article.id %>
                    <p>
                        <%= f.label :id %><br/>
                        <%= f.text_field :id, value: article.id, readonly: true %>
                    </p>
                    <p>
                        <%= f.label :title %><br/>
                        <%= f.text_field :title, value: article.title, size: "50x2"%>
                    </p>
                    <p>
                        <%= f.label :content %><br/>
                        <%= f.text_area :content, value: article.content, size: "70x5" %>
                    </p>
                    <p>
                        <%= f.submit 'Update' %>
                    </p>
                <% end %>
            <% end %>
        <% end %>
        </blockquote>
                
    </div>
</div>

                    


